# CareFlow Nexus - Environment Configuration for Railway Backend
# Copy this file to .env.local and fill in your values

# ============================================
# DATA MODE CONFIGURATION
# ============================================
# Choose your data source mode:
# - Set VITE_USE_MOCK_DATA=true for local development without backend
# - Set VITE_USE_RAILWAY_BACKEND=true to use Railway FastAPI backend
# - Leave both false to use Supabase backend

# Use mock data (no backend connection needed)
VITE_USE_MOCK_DATA=false

# Use Railway backend (FastAPI)
VITE_USE_RAILWAY_BACKEND=true

# ============================================
# RAILWAY BACKEND CONFIGURATION
# ============================================
# Your Railway-deployed FastAPI backend URL
VITE_RAILWAY_API_URL=https://careflownexus-production.up.railway.app

# ============================================
# SUPABASE CONFIGURATION (Optional)
# ============================================
# Only needed if using Supabase mode (when both MOCK and RAILWAY are false)
# Get these from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# APPLICATION SETTINGS
# ============================================
# Application name and branding
VITE_APP_NAME=CareFlow Nexus
VITE_APP_VERSION=1.0.0

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable debug logging
VITE_DEBUG_MODE=false

# ============================================
# NOTES
# ============================================
# For local development with Railway backend:
# 1. Set VITE_USE_RAILWAY_BACKEND=true
# 2. Ensure VITE_RAILWAY_API_URL points to your Railway deployment
# 3. Run: npm run dev
#
# For local development with mock data:
# 1. Set VITE_USE_MOCK_DATA=true
# 2. Run: npm run dev
#
# For production deployment (Vercel):
# 1. Add these environment variables in Vercel dashboard
# 2. Set VITE_USE_RAILWAY_BACKEND=true for Railway backend
# 3. Ensure VITE_RAILWAY_API_URL is set correctly
# 4. Deploy from Vercel dashboard or via git push
